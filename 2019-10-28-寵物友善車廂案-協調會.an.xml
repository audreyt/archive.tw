    <debate>
        <meta>
            <references>
                <TLCPerson href="/ontology/person/::/許民杰" id="許民杰" showAs="許民杰"/>
                <TLCPerson href="/ontology/person/::/黃子維" id="黃子維" showAs="黃子維"/>
                <TLCPerson href="/ontology/person/::/詹壹雯" id="詹壹雯" showAs="詹壹雯"/>
                <TLCPerson href="/ontology/person/::/陳可欣" id="陳可欣" showAs="陳可欣"/>
                <TLCPerson href="/ontology/person/::/蔡玉琪" id="蔡玉琪" showAs="蔡玉琪"/>
            </references>
