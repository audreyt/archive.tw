<akomaNtoso>
    <debate>
        <meta>
            <references>
                <TLCPerson href="/ontology/person/::/唐鳳" id="唐鳳" showAs="唐鳳"/>
                <TLCPerson href="/ontology/person/::/柯淑萍" id="柯淑萍" showAs="柯淑萍"/>
