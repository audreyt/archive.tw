<akomaNtoso>
    <debate>
        <meta>
            <references>
                <TLCPerson href="/ontology/person/::/方儉" id="方儉" showAs="方儉"/>
                <TLCPerson href="/ontology/person/::/唐鳳" id="唐鳳" showAs="唐鳳"/>
            </references>
