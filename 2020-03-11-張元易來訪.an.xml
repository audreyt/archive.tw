    <debate>
        <meta>
            <references>
                <TLCPerson href="/ontology/person/::/張元易" id="張元易" showAs="張元易"/>
                <TLCPerson href="/ontology/person/::/唐鳳" id="唐鳳" showAs="唐鳳"/>
