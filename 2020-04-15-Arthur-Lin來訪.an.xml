    <debate>
        <meta>
            <references>
                <TLCPerson href="/ontology/person/::/Arthur Lin" id="Arthur Lin" showAs="Arthur Lin"/>
                <TLCPerson href="/ontology/person/::/唐鳳" id="唐鳳" showAs="唐鳳"/>
