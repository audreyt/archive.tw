<akomaNtoso>
    <debate>
        <meta>
            <references>
                <TLCPerson href="/ontology/person/::/阮筱琪" id="阮筱琪" showAs="阮筱琪"/>
                <TLCPerson href="/ontology/person/::/唐鳳" id="唐鳳" showAs="唐鳳"/>
