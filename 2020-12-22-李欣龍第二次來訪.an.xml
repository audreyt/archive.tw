    <debate>
        <meta>
            <references>
                <TLCPerson href="/ontology/person/::/李欣龍" id="李欣龍" showAs="李欣龍"/>
                <TLCPerson href="/ontology/person/::/唐鳳" id="唐鳳" showAs="唐鳳"/>
