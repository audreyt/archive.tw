<akomaNtoso>
    <debate>
        <meta>
            <references>
                <TLCPerson href="/ontology/person/::/唐鳳" id="唐鳳" showAs="唐鳳"/>
                <TLCPerson href="/ontology/person/::/林郁書" id="林郁書" showAs="林郁書"/>
            </references>
