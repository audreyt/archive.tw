<akomaNtoso>
    <debate>
        <meta>
            <references>
                <TLCPerson href="/ontology/person/::/張家源" id="張家源" showAs="張家源"/>
                <TLCPerson href="/ontology/person/::/唐鳳" id="唐鳳" showAs="唐鳳"/>
                <TLCPerson href="/ontology/person/::/會後民航局同仁回覆" id="會後民航局同仁回覆" showAs="會後民航局同仁回覆"/>
            </references>
