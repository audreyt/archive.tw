                <TLCPerson href="/ontology/person/::/王馥蓓" id="王馥蓓" showAs="王馥蓓"/>
                <TLCPerson href="/ontology/person/::/唐鳳" id="唐鳳" showAs="唐鳳"/>
                <TLCPerson href="/ontology/person/::/莊智淵" id="莊智淵" showAs="莊智淵"/>
                <TLCPerson href="/ontology/person/::/龔大中" id="龔大中" showAs="龔大中"/>
            </references>
