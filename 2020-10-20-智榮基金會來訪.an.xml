                <TLCPerson href="/ontology/person/::/唐鳳" id="唐鳳" showAs="唐鳳"/>
                <TLCPerson href="/ontology/person/::/施振榮" id="施振榮" showAs="施振榮"/>
                <TLCPerson href="/ontology/person/::/吳建豪" id="吳建豪" showAs="吳建豪"/>
            </references>
