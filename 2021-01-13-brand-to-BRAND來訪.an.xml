<akomaNtoso>
    <debate>
        <meta>
            <references>
                <TLCPerson href="/ontology/person/::/邱馨誼" id="邱馨誼" showAs="邱馨誼"/>
                <TLCPerson href="/ontology/person/::/唐鳳" id="唐鳳" showAs="唐鳳"/>
            </references>
